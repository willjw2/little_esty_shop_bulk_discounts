<h1>Edit Bulk Discount</h1>
<%= form_with url: merchant_bulk_discount_path(@merchant, @bulk_discount), method: :patch, local: true do |form| %>
  <%= form.label :quantity, "Quantity Threshold:" %>
  <%= form.number_field :quantity, value: @bulk_discount.quantity %>
  <%= form.label :percentage, "Percentage:" %>
  <%= form.number_field :percentage, in: 0.0..1.00, step: 0.01, value: @bulk_discount.percentage %>
  <%= form.submit "Submit" %>
<% end %>
